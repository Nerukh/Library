<Window x:Class="Login_to_the_program__Admin__User_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login_to_the_program__Admin__User_" 
       Title="Login" Height="200" Width="300">

    <StackPanel Margin="10">
        <TextBlock Text="Username"/>
        <TextBox Name="UsernameTextBox"/>
        <TextBlock Text="Password" Margin="0,10,0,0" />
        <TextBox Name="PasswordTextBox" />
        <Button Name="LoginButton"  Background="Orange" Content="Login" Command="{Binding commandToSing}" Margin="0,20,0,0"  />
        <TextBlock Name="ErrorTextBlock" Foreground="DarkRed" Visibility="Collapsed"/>
    </StackPanel>
    
</Window>
