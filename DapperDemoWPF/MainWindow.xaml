<Window x:Class="DapperDemoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DapperDemoWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DataGrid AutoGenerateColumns="True"  Name="dg" Margin="0,-2,0,1"/>
        <TextBox x:Name="txtName"  HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="31,0,0,34" Width="200"  />
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="251,0,0,34" Width="200" />
        <DatePicker x:Name="txtBirthday" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="470,0,0,31" Width="200" />

        <Button Content="Add" HorizontalAlignment="Left" Margin="155,288,0,0" VerticalAlignment="Top" Height="37" Width="58" Click="AddWaiter_Click"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="490,288,0,0" VerticalAlignment="Top" Height="37" Width="58" Click="DeleteWaiter_Click"/>
        <Button Content="Edit" HorizontalAlignment="Left" Margin="694,374,0,0" VerticalAlignment="Top" Height="36" Width="58" Click="EditWaiter_Click"/>



    </Grid>
</Window>
