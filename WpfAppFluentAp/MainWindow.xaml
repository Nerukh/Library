<Window x:Class="WpfAppFluentAp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppFluentAp"
        mc:Ignorable="d"
        Title="MainWindow" Height="220" Width="300">
    <StackPanel Margin="10">
         <TextBlock Text="Username"/>
         <TextBox Name="UsernameTextBox"/>
          <TextBlock Text="Password" Margin="0,15,0,0" />
        <TextBox Name="PasswordTextBox" Margin="0,0,0,22"/>
        <Button Name="LoginButton" Content="login" Command="{Binding commandToJoin}" />
        <TextBlock Name="ErrorTextBlock" Visibility="Collapsed"/>
    </StackPanel>                
</Window>
